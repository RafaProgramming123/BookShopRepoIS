@model EShop.Domain.DTO.PartnerEventsViewModel

@{
    ViewData["Title"] = "Partner Events";
}

<div class="container my-5">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <!-- Events Section -->
    <section class="mb-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="h5 m-0">Events</h2>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Event Name</th>
                                <th>Description</th>
                                <th>Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Events)
                            {
                                <tr>
                                    <td>@item.eventName</td>
                                    <td>@item.eventDescription</td>
                                    <td>
                                        <img src="@item.eventImage" alt="@item.eventName" class="img-fluid rounded" style="max-width:200px;" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- Scheduled Events Section -->
    <section>
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="h5 m-0">Scheduled Events</h2>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Display Name</th>
                                <th>Date & Time</th>
                                <th>Location</th>
                                <th>Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ScheduledEvents)
                            {
                                <tr>
                                    <td>@item.eventNameDisplay</td>
                                    <td>@item.scheduledEventDateTime.ToString("g")</td>
                                    <td>@item.scheduledEventLocation</td>
                                    <td>
                                        <img src="@item.scheduledEventImage" alt="@item.eventNameDisplay" class="img-fluid rounded" style="max-width:200px;" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
