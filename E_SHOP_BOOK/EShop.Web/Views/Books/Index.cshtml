 @model IEnumerable<EShop.Domain.Domain.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center text-primary">📚 Explore Our Book Collection</h1>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success btn-lg">➕ Add a New Book</a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-lg border-0">
                    <a href="@item.Image" target="_blank">
                        <img src="@item.Image" class="card-img-top" alt="@item.Title" style="height: 250px; object-fit: cover; border-radius: 8px;">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title text-dark">@item.Title</h5>
                        <p class="card-text text-secondary small">@item.Description</p>
                        <p class="card-text mb-1"><strong>Price:</strong> <span class="text-success">$@item.Price</span></p>
                        <p class="card-text mb-1"><strong>Rating:</strong> ⭐ @item.Rating</p>
                        <p class="card-text mb-1"><strong>Genre:</strong> @item.Genre</p>
          
                    </div>
                    <div class="card-footer bg-light text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm mx-1">✏️ Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm mx-1">ℹ️ Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm mx-1">❌ Delete</a>
                        <a asp-controller="Books" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm mx-1">🛒 Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

