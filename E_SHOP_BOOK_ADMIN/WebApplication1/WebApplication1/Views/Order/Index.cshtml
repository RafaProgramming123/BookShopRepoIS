@model List<WebApplication1.Models.Order>

<div class="container">
    <div class="row">
        <h2>Orders List</h2>
        <a asp-controller="Order" asp-action="ExportAllOrders" class="btn btn-info mb-3">Export All Orders</a>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Customer Name</th>
                    <th>Number of Products</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var order = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@order.User?.FirstName @order.User?.LastName</td>
                        <td>@order.bookInOrders.Count</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">View Details</a>
                            |
                            <a asp-action="CreateInvoice" asp-route-id="@order.Id" class="btn btn-warning">Create Invoice</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
